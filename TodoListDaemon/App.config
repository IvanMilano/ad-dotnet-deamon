<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <appSettings>
    <add key="ida:Tenant" value="{azure-tentant-name}" />
    <add key="ida:AADInstance" value="https://login.microsoftonline.com/{0}" />

    <add key="ida:User" value="{azure-ad-user-that-have-access-to-the-api-and-app}"/>
    <add key="ida:Password" value="{azure-ad-user-password}"/>
    
    <add key="ida:AppClientId" value="{guid-of-the-web-app}" />
    <add key="ida:AppKey" value="{secret-key-of-the-web-app}" />
    
    <add key="ida:ApiClientId" value="{gui-of-the-api}" />
    <add key="ida:ApiKey" value="{secret-key-of-the-api}" />
    <add key="ida:ApiEndpointBaseAddress" value="{api-endpoint}" />    
  </appSettings>
</configuration>